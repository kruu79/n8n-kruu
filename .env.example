APP_NAME=kruu

# IMPORTANT: Generate a random encryption key
# Run: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-random-encryption-key-here

# Webhook URL for your n8n instance
WEBHOOK_URL=https://n8n.example.com

# SQLite connection pool size for better performance (recommended: 2-10)
DB_SQLITE_POOL_SIZE=5

# Enable task runners (will be default in future versions)
N8N_RUNNERS_ENABLED=true

# Block access to environment variables from Code Node and expressions
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Disable bare repositories in Git Node for security
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Production only: Basic Auth credentials (uncomment for production)
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your-secure-password